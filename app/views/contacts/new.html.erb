<div class="new-tweet">
  <div class="errors">
    <% @errors.each do |error| %>
    <p><%= error %></p>
    <% end %>
  </div>
  <%= form_tag("/contacts/create") do %>  
    <div class="text-wrap">
      <input type="text" name="name" placeholder="名前" value="<%= params[:name] %>"/>
    </div>
    <div class="text-wrap">
      <input type="email" name="email" placeholder="メールアドレス" value="<%= params[:email] %>"/>
    </div>
    <div class="textarea-wrap">
      <textarea name="text" placeholder="お問い合わせ内容"><%= params[:text] %></textarea>
    </div>
    <input type="submit" value="送信" />
  <% end %>
</div>